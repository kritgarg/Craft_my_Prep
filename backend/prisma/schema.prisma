generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int           @id @default(autoincrement())
  email       String?       @unique
  password    String?
  githubId    String?       @unique
  name        String?
  avatar      String?
  xp          Int           @default(0)
  streak      Int           @default(0)
  lastLogin   DateTime?

  plans        Plan[]
  notes        Note[]
  miniProjects MiniProject[]
  challenges   Challenge[]
  companyQuestions CompanyQuestion[]

  createdAt    DateTime @default(now())
}

model Plan {
  id        Int      @id @default(autoincrement())
  userId    Int
  jd        String
  skills    Json
  roadmap   Json
  questions Json
  projects  Json
  resources Json

  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model CompanyQuestion {
  id        Int      @id @default(autoincrement())
  userId    Int
  company   String
  role      String?
  question  String
  answer    String   @db.Text
  isSolved  Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model MiniProject {
  id          Int      @id @default(autoincrement())
  userId      Int
  title       String
  description String
  steps       Json
  isCompleted Boolean  @default(false)
  difficulty  String?   // Easy | Medium | Hard
  timeline    String?
  techStack   String?

  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

model Note {
  id        Int      @id @default(autoincrement())
  userId    Int
  content   String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

model Challenge {
  id        Int      @id @default(autoincrement())
  userId    Int
  question  String
  solution  String?
  isSolved  Boolean  @default(false)
  language  String?
  difficulty String?

  date      DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
